{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/open-bio/molflow/master/assets/schema_input.json",
    "title": "PBD-SDF 流程 - 输入参数验证",
    "description": "用于验证 PBD-SDF 文件格式的模式定义",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "样本名称不能为空且不能包含空格",
                "meta": ["id"]
            },
            "pdb_file": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.pdb$",
                "errorMessage": "确认PDB文件存在，路径不能为空，不能包含空格，且必须以.pdb结尾"
            },
            "sdf_file": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.sdf$",
                "errorMessage": "确认SDF文件存在，路径不能为空，不能包含空格，且必须以.sdf结尾"
            }
        },
        "required": ["sample", "pdb_file", "sdf_file"]
    }
}
